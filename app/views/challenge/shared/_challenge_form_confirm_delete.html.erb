<%= form_for(@collection, :url => 
  if @collection.prompt_meme?
    collection_prompt_meme_path(@collection)
  else
    collection_gift_exchange_path(@collection)
  end,
  :html => { :method => :delete }) do |f| %>
  <p class="caution notice">
    <%= ts("Are you sure you want to <strong><em>delete</em></strong> the challenge from the collection %{title}? All sign-ups, assignments, and settings will be lost. (Works and bookmarks will remain in the collection.)", title: @collection.title).html_safe %>
  </p>
  <p class="actions">
    <%= f.submit ts("Yes, Delete Challenge") %>
  </p>
<% end %>
